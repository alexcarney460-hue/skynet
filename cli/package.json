{
  "name": "@skynet/cli",
  "version": "1.0.0",
  "description": "Skynet CLI - Terminal interface for capability registry",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "skynet": "dist/bin/skynet.js"
  },
  "scripts": {
    "build": "tsc",
    "bundle": "esbuild dist/bin/skynet.js --bundle --platform=node --target=node18 --format=esm --outfile=dist/skynet-bundle.js --external:commander",
    "dev": "node --loader ts-node/esm src/bin/skynet.ts",
    "pack:old": "pkg dist/bin/skynet.js --targets node18-win-x64,node18-macos-x64,node18-linux-x64 --output skynet"
  },
  "dependencies": {
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "esbuild": "^0.27.3",
    "pkg": "^5.8.1",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}
